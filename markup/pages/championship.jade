include ../modules/db/db


head
  +head(head.championship)
body.rails_admin
  +navbar
  .container-fluid
    //- .row
    +nav('Первенство')

    .col-sm-10.col-md-10
      .row
        .content
          .page-header
            h1 Управление первенством

          ol.breadcrumb.panel.panel-default
            li
              a(href='index.html') Панель управления
            li.active Сезоны

          ul.nav.nav-tabs
            li.index_collection_link.active(title='', rel='')
              a(href='#')
                span.glyphicon.glyphicon-th-list
                | &nbspСписок
            li.new_collection_link(title='', rel='')
              a(href='#')
                span.glyphicon.glyphicon-plus
                | &nbspДобавить
            //- li.export_collection_link(title='', rel='')
            //-   a(href='#')
            //-     span.glyphicon.glyphicon-share
            //-     | &nbspЭкспорт
            li.dropdown(style='float:right')
              a.dropdown-toggle(data-toggle='dropdown', href='#')
                | Выбранные элементы
                span.caret
              ul.dropdown-menu(role='menu')
                //- li
                //-   a(href='#') Экспортировать выбранные записи
                li
                  a(href='#') Удалить выбранные записи
          form#bulk_form.form(accept-charset='UTF-8', action='')
            div(style='margin:0;padding:0;display:inline')
              input.form-control(name='utf8', type='hidden', value='✓')
            input#bulk_action.form-control(name='bulk_action', type='hidden')
            table.table.table-condensed.table-striped
              thead
                tr
                  th.shrink
                    input.toggle(type='checkbox')
                  th.header.headerSortDown.id_field.integer_type(data-href='#') Id
                  th Название
                  th Дата начала
                  th Дата окончания
              tbody
                each season in seasons
                  tr
                    td
                      input#bulk_ids_(name='bulk_ids[]', type='checkbox', value='1')
                    td.id_field.integer_type(title='1')=season.id
                    td
                      a(href='games.html')=season.label
                    td=season.startDate
                    td=season.endDate
          .clearfix.total-count Всего: #{seasons.length}

          footer
            +footer
