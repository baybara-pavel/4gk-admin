include ../modules/head/head
include ../modules/footer/footer
include ../modules/navbar/navbar
include ../modules/nav/nav

head
  +head(head.dashboard)
body.rails_admin
  +navbar
  .container-fluid
    //- .row
    +nav()

    .col-sm-10.col-md-10
      .row
        .content
          .page-header
            h1 Управление сайтом

          ul.breadcrumb.panel.panel-default
            li.active
              a(href='') Панель управления

          ul.nav.nav-tabs
            li.active(title='', rel='')
              a(href='')
                span.glyphicon.glyphicon-home(aria-hidden='true') 
                | &nbsp Панель управления

          -var tables = ['Сезоны','Команды','Игроки','Фото','Видео','Вопросы']
          table.table.table-condensed.table-striped.table-hover
            thead
              tr
                th.model-name Название таблицы
                th.records Количество записей
                th.controls.col-xs-3.col-md-2.col-lg-1
            tbody
              each table in tables
                tr
                  td
                    span.show
                      //- a.pjax(href='')
                      = table
                  td
                  td.links.col-xs-3.col-md-2.col-lg-1
                    ul.list-inline
                      li.icon.index_collection_link(title='Список', rel='tooltip')
                          a.pjax(href='#')
                            span.glyphicon.glyphicon-th-list
                      li.icon.new_collection_link(title='Добавить', rel='tooltip')
                          a.pjax(href='#')
                            span.glyphicon.glyphicon-plus
                      li.icon.export_collection_link(title='Экспортировать', rel='tooltip')
                          a.pjax(href='#')
                            span.glyphicon.glyphicon-share
                      li.icon.history_index_collection_link(title='История', rel='tooltip')
                          a.pjax(href='#')
                            span.glyphicon.glyphicon-book
          //- #block-tables.block
            .content
              h2 History
              table.table.table-condensed.table-striped
                thead
                  tr
                    th.shrink.user User
                    th.changes Changes
                tbody
                  tr
                    td username@example.com
                    td created ball #1 
            footer
              p © RailsAdmin 2012
