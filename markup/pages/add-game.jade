              label.control-label.col-sm-2(for='') Дата закрытия регистрации
              .col-sm-2
                input.form-control(name='', type='date', value='')
                .help-block&nbsp
            .form-group
              label.control-label.col-sm-2(for='') Статус регистрации
              .col-sm-2
                select.form-control(name='')
                  option не анонсирована
                  option открыта
                  option закрыта
                .help-block&nbsp
            .form-group
              .col-sm-offset-2.col-sm-5
                button.btn.btn-primary(data-disable-with='Save', name='_save', type='submit')
                  span.glyphicon.glyphicon-ok
                  |&nbsp Сохранить
                button.btn.btn-default(data-disable-with='Save', name='_save', type='submit')
                  span.glyphicon.glyphicon-remove
                  |&nbsp Отмена
          +footer
