                | &nbspДобавить
                
          form.form-horizontal(accept-charset='UTF-8', action='', data-title='New User', enctype='multipart/form-data', method='post')
            .form-group
              label.control-label.col-sm-2(for='') Дата игры
              .col-sm-2
                input.form-control(name='', type='date', value='')
